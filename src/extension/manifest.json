{
  "description": "ThemesRFun",
  "homepage_url": "https://github.com/lmorchard/themesrfun",
  "manifest_version": 2,
  "name": "ThemesRFun",
  "permissions": [
    "theme",
    "storage"
  ],
  "browser_action": {
    "browser_style": true,
    "default_title": "Themr",
    "default_icon": {
        "32": "images/icon.svg"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "js": ["content-script.js"],
      "matches": [
        "*://localhost/*",
        "https://*.mozilla.org/"
      ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "48":"images/icon.svg",
    "96": "images/icon.svg"
  },
  "version": "0.0.4",
  "applications": {
    "gecko": {
      "strict_min_version": "57.0a1"
    }
  }
}

