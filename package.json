{
  "name": "themesrfun",
  "description": "Theming demo for Firefox Quantum and beyond.",
  "version": "0.0.1",
  "id": "themesrfun@mozilla.com",
  "author": "Les Orchard <ma@lmorchard.com>",
  "contributors": [
    "John Gruen <john.gruen@gmail.com>"
  ],
  "main": "src/web/index.js",
  "scripts": {
    "start": "npm-run-all --parallel server watch:extension",
    "server": "NODE_ENV=development webpack-dev-server --config webpack.web.js",
    "watch": "npm-run-all --parallel watch:*",
    "watch:web": "NODE_ENV=development webpack --watch --progress --colors --config webpack.web.js",
    "watch:extension": "NODE_ENV=development webpack --watch --progress --colors --config webpack.extension.js",
    "build": "npm-run-all --parallel build:*",
    "build:web": "NODE_ENV=production webpack -p --config webpack.web.js",
    "build:extension": "NODE_ENV=production webpack -p --config webpack.extension.js",
    "clean": "rm -rf addon.xpi build web-ext-artifacts",
    "package": "npm run clean && npm run build:extension && web-ext build --overwrite-dest --source-dir=build/extension && mv web-ext-artifacts/*.zip ./addon.xpi",
    "run": "npm run build:extension && web-ext run --source-dir=build/extension",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "node": ">=6.2.0"
  },
  "license": "MPL2",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-node8": "^1.2.0",
    "babel-preset-react": "^6.24.1",
    "classnames": "^2.2.5",
    "clean-webpack-plugin": "^0.1.17",
    "copy-webpack-plugin": "^4.2.0",
    "css-loader": "^0.28.7",
    "ejs": "^2.5.7",
    "extract-text-webpack-plugin": "^3.0.2",
    "generate-asset-webpack-plugin": "^0.3.0",
    "html-webpack-plugin": "^2.30.1",
    "image-webpack-loader": "^3.4.2",
    "node-sass": "^4.6.1",
    "npm-run-all": "^4.1.2",
    "react-svg": "^2.1.22",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "svg-url-loader": "^2.3.0",
    "url-loader": "^0.6.2",
    "web-ext": "^2.2.2",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.4",
    "webpack-merge": "^4.1.1",
    "write-file-webpack-plugin": "^4.2.0"
  },
  "dependencies": {
    "json-url": "^2.3.1",
    "query-string": "^5.0.1",
    "react": "^16.1.0",
    "react-color": "^2.13.8",
    "react-dom": "^16.1.0",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1",
    "redux-devtools-extension": "^2.13.2"
  },
  "extensionManifest": {
    "permissions": [
      "theme",
      "storage"
    ],
    "browser_action": {
      "browser_style": true,
      "default_title": "ThemesRFun",
      "default_icon": {
        "32": "images/icon.svg"
      }
    },
    "background": {
      "scripts": [
        "background.js"
      ]
    },
    "content_scripts": [
      {
        "js": [
          "contentScript.js"
        ],
        "matches": [
          "*://localhost/*",
          "https://*.mozilla.org/"
        ],
        "run_at": "document_start"
      }
    ],
    "icons": {
      "48": "images/icon.svg",
      "96": "images/icon.svg"
    },
    "applications": {
      "gecko": {
        "strict_min_version": "57.0a1"
      }
    }
  }
}
